// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Status {
  id   Int    @id @default(autoincrement())
  name String

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  User            User[]
  ProductCategory Category[]
  Product         Product[]
  Project         Project[]
  SubCategory     SubCategory[]
}

model Organization {
  id   Int     @id @default(autoincrement())
  name String
  desc String?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  UserOrganization UserOrganization[]
  Product          Product[]
}

model Brand {
  id   Int     @id @default(autoincrement())
  name String
  desc String?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  Product Product[]
}

model Location {
  id      Int       @id @default(autoincrement())
  name    String
  desc    String?
  Product Product[]
}

model UserRole {
  id   Int    @id @default(autoincrement())
  name String
  User User[]
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  name      String?
  password  String?
  address   String?
  token     String?
  role_id   Int?    @default(2)
  status_id Int     @default(1)

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  role         UserRole?          @relation(fields: [role_id], references: [id])
  status       Status             @relation(fields: [status_id], references: [id])
  organization UserOrganization[]
  ProjectTask  ProjectTask[]
}

model UserOrganization {
  id              Int    @id @default(autoincrement())
  user_id         String
  organization_id Int
  brandId         Int?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  user         User         @relation(fields: [user_id], references: [id])
  organization Organization @relation(fields: [organization_id], references: [id])
}

model Category {
  id        Int     @id @default(autoincrement())
  name      String?
  status_id Int?    @default(1)

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  status  Status?   @relation(fields: [status_id], references: [id])
  Product Product[]
}

model SubCategory {
  id        Int     @id @default(autoincrement())
  name      String?
  status_id Int?    @default(1)

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  status  Status?   @relation(fields: [status_id], references: [id])
  Product Product[]
}

model Product {
  id              String  @id @default(cuid())
  name            String?
  desc            String?
  serial_number   String?
  category_id     Int?
  sub_category_id Int?
  status_id       Int?    @default(1)
  organization_id Int?
  location_id     Int?
  brand_id        Int
  quantity        Int     @default(1)

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  status       Status?       @relation(fields: [status_id], references: [id])
  organization Organization? @relation(fields: [organization_id], references: [id])
  category     Category?     @relation(fields: [category_id], references: [id])
  brand        Brand?        @relation(fields: [brand_id], references: [id])
  location     Location?     @relation(fields: [location_id], references: [id])
  subcategory  SubCategory?  @relation(fields: [sub_category_id], references: [id])
}

model Project {
  id        String  @id @default(cuid())
  name      String?
  desc      String  @db.Text
  status_id Int?    @default(1)

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  status Status? @relation(fields: [status_id], references: [id])

  projectreference ProjectReference[]
  ProjectFeedBAck  ProjectFeedback[]
  ProjectTask      ProjectTask[]
}

model ProjectReference {
  id         Int     @id @default(autoincrement())
  name       String?
  desc       String?
  link       String?
  project_id String?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  Project Project? @relation(fields: [project_id], references: [id])
}

model ProjectFeedback {
  id           Int     @id @default(autoincrement())
  name         String?
  overallscore Int?
  feedback     String?
  project_id   String?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  Project Project? @relation(fields: [project_id], references: [id])
}

model ProjectTask {
  id         Int     @id @default(autoincrement())
  title      String?
  status     String?
  pic_id     String
  project_id String?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?

  user    User     @relation(fields: [pic_id], references: [id])
  Project Project? @relation(fields: [project_id], references: [id])
}

model Sample {
  id            String  @id @default(cuid())
  name          String?
  desc          String?
  serial_number String?

  date         DateTime @default(now())
  img_path     DateTime @default(now())
  file_invoice DateTime @default(now())

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  deleted_at DateTime?
}
